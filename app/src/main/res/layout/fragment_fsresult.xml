<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Feature Selection Result:"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold" />
<android.support.v7.widget.CardView
android:layout_width="match_parent"
android:layout_height="53dp"
android:layout_margin="25dp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView

        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="fill_vertical"
        android:text="Name "
        android:textAlignment="center"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/f_name"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:gravity="fill_vertical"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="18sp" />

</LinearLayout>

</android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_margin="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView

                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="fill_vertical"
                android:text="old features count"
                android:textAlignment="center"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/f_old_feat"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:gravity="fill_vertical"
                android:text="TextView"
                android:textAlignment="center"
                android:textSize="18sp" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_margin="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView

                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="fill_vertical"
                android:text="new features count"
                android:textAlignment="center"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/f_new_features"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:gravity="fill_vertical"
                android:text="TextView"
                android:textAlignment="center"
                android:textSize="18sp" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_margin="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView

                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="fill_vertical"
                android:text="Old accuracy"
                android:textAlignment="center"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/f_old_acc"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:gravity="fill_vertical"
                android:text="TextView"
                android:textAlignment="center"
                android:textSize="18sp" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_margin="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView

                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="fill_vertical"
                android:text="New Accuracy"
                android:textAlignment="center"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/f_new_acc"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:gravity="fill_vertical"
                android:text="TextView"
                android:textAlignment="center"
                android:textSize="18sp" />

        </LinearLayout>

    </android.support.v7.widget.CardView>



</LinearLayout>
